    <tabbox id="tboxPrincipal"  width="100%">
        <tabs>
                <tab label="Permisos aprobados por entregar" sclass="menutabs" /> 
        </tabs>
        
        <tabpanels>
            <tabpanel  height="98%" width="99%"  >
                <listbox  width="99%"
                          model="@load(vm.listaSolicitudPermisos)" 
                          nonselectableTags="*" 
                          mold="paging" pageSize="20">
                
                    <custom-attributes org.zkoss.zul.listbox.rod="true"/>
                
                    
                    <listhead sizable="false">
                        <listheader label="NÂ° Solicitud"  align="left" hflex="3"></listheader>
                        <listheader label="${labels.app.ci}"  align="left" hflex="5"></listheader>
                        <listheader label="${labels.app.nombre}"  align="left" hflex="5"></listheader>
                        <listheader label="${labels.app.fecha}"  align="left" hflex="5"></listheader>
                        <!--<listheader label="Barrio"  align="left" hflex="6"></listheader>-->
                        <listheader label="Agente"  align="left" hflex="6"></listheader>
                        <listheader label="T. Solicitud"  align="left" hflex="7"></listheader>
                        <listheader label=""  align="left" width="33px"></listheader>
                        <listheader label=""  align="left" width="33px"></listheader>
                        <!--<listheader label=""  align="left" width="33px"></listheader>-->
                    </listhead>
                   
                
                    <template name="model">
                        <listitem  >
                            <listcell zclass = "mycss-listcell">
                                <label sclass="letraLisbox" 
                                                   value="@bind(each.solpNumero)" style="font-weight:bold" 
                                                   width="100%"/>
                            </listcell>  
                            <listcell zclass = "mycss-listcell">
                                <label sclass="letraLisbox" 
                                                   value="@bind(each.solNumCedula)" style="font-weight:bold" 
                                                   width="100%"/>
                            </listcell>  
                            <listcell zclass = "mycss-listcell">
                                <label sclass="letraLisbox" 
                                                   value="@bind(each.solpNombreSol)" style="font-weight:bold" 
                                                   width="100%"/>
                            </listcell>   
                            <listcell zclass = "mycss-listcell">                                          
                                <datebox compact="true" value="@bind(each.solpFecha)" 
                                                     buttonVisible="false" lenient="true" readonly="true"
                                                     format="medium" width="98%"  />
                            </listcell>  
<!--                            <listcell zclass = "mycss-listcell" >                                          
                              
                                <label sclass="letraLisbox" 
                                                   value="@bind(each.solpBarrioUrbanizacion)" style="font-weight:bold" 
                                                   width="100%"/>
                            </listcell>  -->
                            <listcell zclass = "mycss-listcell" >                                          
                              
                                <label sclass="letraLisbox" 
                                           value="@bind(each.idBombero.bomNombre)" style="font-weight:bold" 
                                           width="100%"/>
                                
                            </listcell>  
                            <listcell zclass = "mycss-listcell" >                                          
                              
                                <label sclass="letraLisbox" 
                                       value="@bind(each.idTipoSolicitud.tipsDescripcion)" style="font-weight:bold" 
                                       width="100%"/>
                            </listcell>  
                                                  
                            <listcell zclass = "mycss-listcell">
                                                     
                                <button    style="width:30px;height:30px; background: grey" iconSclass="z-icon-print"
                                           onClick="@command('verPermiso',valor=each)"
                                           class="btn btn-primary btn-xs"
                                           tooltiptext="Imprimir permiso"/> 
                                    
                            </listcell>  
                            <listcell zclass = "mycss-listcell">
                                                     
                                <button    style="width:30px;height:30px; background: orange" iconSclass="z-icon-print"
                                
                                           class="btn btn-primary btn-xs"
                                           onClick="@command('cobrar',valor=each)" 
                                           tooltiptext="Cobrar e imprimir recibo"/> 
                                    
                            </listcell>
                            <listcell zclass = "mycss-listcell">
                                                     
                                <button    style="width:30px;height:30px; background: green" iconSclass="z-icon-thumbs-o-up"
                                           class="btn btn-primary btn-xs"
                                           onClick="@command('cambiarEstado',valor=each)" 
                                           tooltiptext="Parte diario"/> 
                                    
                            </listcell>
                        </listitem>
                    </template>   
                </listbox>
            </tabpanel>
        </tabpanels>
    </tabbox>

</div>



