<?xml version="1.0" encoding="UTF-8"?>
<window  id="wOpcion"  position="center" class="col-12 col-sm-12 col-md-6 col-lg-6" closable="true"  
         apply="org.zkoss.bind.BindComposer" 
         viewModel="@id('vm') @init('com.ec.controlador.AdministrarPorInspeccionar')">
    
    <caption label="${labels.app.obsprevencion}" style="font-weight:bold"/> 
    <div  class="container-fluid" >
        <div  class="row" >  
            
            <div class="col-12 col-sm-12 col-md-12 col-lg-12  form-group "  >
                <div class="col-12 col-sm-12 col-md-4 col-lg-4  form-group "  >                                 
                    <label value="(*)" style="color:red;font-weight:bold"/>${labels.app.fechaInsp}
                    <datebox compact="true"  value="@bind(vm.entidadInspeccion.insFecha)" 
                             readonly="true" style="font-weight:bold;" 
                             buttonVisible="true" 
                             lenient="true" format="dd/MM/yyyy" 
                             constraint="no empty: Ingrese la fecha "/>

                </div>
                <div class="col-12 col-sm-12 col-md-12 col-lg-12  form-group "  >
                    ${labels.app.observacion}                 
                    <textbox  maxlength="100" 
                              onChange="self.setValue(self.getValue().toUpperCase())"
                              value="@bind(vm.entidadInspeccion.insObservacion)" 
                              class="form-control" />
                </div>
                <div class="col-12 col-sm-12 col-md-12 col-lg-12  " align="center" >
                    <button    iconSclass="z-icon-save"
                               label="Guardar y aprobar"
                               class="btn btn-primary btn-xs "                                                               
                               onClick="@command('cambiarEstado',valor=each)"
                               tooltiptext="Aprobar"/>    
                </div> 
            </div>                
        </div>
    </div>           
</window>